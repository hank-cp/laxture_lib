<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <style name="CommonTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme" tools:ignore="NewApi">@style/CommonTheme.AlertDialogTheme</item>
        <item name="android:buttonStyle">@style/CommonTheme.Button</item>
        <item name="android:imageButtonStyle">@style/CommonTheme.ImageButton</item>
        <item name="android:checkboxStyle">@style/CommonTheme.CheckBox</item>
        <item name="android:radioButtonStyle">@style/CommonTheme.RadioButton</item>
        <item name="android:textViewStyle">@style/CommonTheme.TextView</item>
        <item name="android:listViewStyle">@style/CommonTheme.ListView</item>
    </style>

    <!-- Alert Dialog Style -->

    <style name="CommonTheme.AlertDialogStyle">
        <item name="android:fullDark">@drawable/dialog_full_holo_light</item>
        <item name="android:topDark">@drawable/dialog_top_light</item>
        <item name="android:centerDark">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomDark">@drawable/dialog_bottom_holo_light</item>
        <item name="android:fullBright">@drawable/dialog_full_holo_light</item>
        <item name="android:topBright">@drawable/dialog_top_light</item>
        <item name="android:centerBright">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomBright">@drawable/dialog_bottom_holo_light</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom_holo_light</item>
        <item name="android:centerMedium">@drawable/dialog_middle_holo_light</item>
    </style>

    <style name="CommonTheme.AlertDialogStyle.NoTitle" parent="@style/CommonTheme.AlertDialogStyle">
        <item name="android:topDark">@drawable/dialog_top_holo_light</item>
        <item name="android:topBright">@drawable/dialog_top_holo_light</item>
    </style>

    <style name="CommonTheme.AlertDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- For API>10, AlertDialog must be set by `new AlertDialog(context, themeId)`, where
             themeId is `CommonTheme.AlertDialogTheme` -->
        <item name="android:alertDialogStyle">@style/CommonTheme.AlertDialogStyle</item>
        <item name="android:buttonBarStyle" tools:ignore="NewApi">@style/CommonTheme.AlertDialogTheme.ButtonBarStyle</item>
        <item name="android:buttonStyle">@style/CommonTheme.AlertDialogTheme.Button</item>

        <!-- for System Context Menu -->
        <item name="android:textColor">@android:color/black</item>

        <item name="android:textAppearanceLarge">@style/CommonTheme.AlertDialogTheme.TextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/CommonTheme.AlertDialogTheme.TextAppearanceMedium</item>
    </style>

    <style name="CommonTheme.AlertDialogTheme.Button" parent="@android:style/Widget.Button" />

    <style name="CommonTheme.AlertDialogTheme.NoTitle" parent="@style/CommonTheme.AlertDialogTheme">
        <item name="android:alertDialogStyle">@style/CommonTheme.AlertDialogStyle.NoTitle</item>
    </style>

    <style name="CommonTheme.AlertDialogTheme.ButtonBarStyle">
        <item name="android:background">@null</item>
    </style>

    <style name="CommonTheme.AlertDialogTheme.TextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="CommonTheme.AlertDialogTheme.TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <!-- Common Widget Style -->

    <style name="CommonTheme.Button" parent="@android:style/Widget.Button" />

    <style name="CommonTheme.ImageButton" parent="@android:style/Widget.ImageButton" />

    <style name="CommonTheme.CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox" />

    <style name="CommonTheme.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton" />

    <style name="CommonTheme.TextView" parent="@android:style/Widget.TextView" />

    <style name="CommonTheme.ListView" parent="@android:style/Widget.ListView" />

</resources>
