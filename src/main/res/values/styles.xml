<resources xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:tools="http://schemas.android.com/tools">

    <!-- Alert Dialog Style -->

    <style name="CustomAlertDialogStyle">
        <item name="android:fullDark">@drawable/dialog_full_holo_light</item>
        <item name="android:topDark">@drawable/dialog_top_light</item>
        <item name="android:centerDark">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomDark">@drawable/dialog_bottom_holo_light</item>
        <item name="android:fullBright">@drawable/dialog_full_holo_light</item>
        <item name="android:topBright">@drawable/dialog_top_light</item>
        <item name="android:centerBright">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomBright">@drawable/dialog_bottom_holo_light</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom_holo_light</item>
        <item name="android:centerMedium">@drawable/dialog_middle_holo_light</item>
    </style>

    <style name="CustomAlertDialogStyle.NoTitle" parent="@style/CustomAlertDialogStyle">
        <item name="android:topDark">@drawable/dialog_top_holo_light</item>
        <item name="android:topBright">@drawable/dialog_top_holo_light</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- For API>10, AlertDialog must be set by `new AlertDialog(context, themeId)`, where
             themeId is `CustomAlertDialogTheme` -->
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:buttonBarStyle" tools:ignore="NewApi">@style/CustomAlertDialogTheme.ButtonBarStyle</item>
        <item name="android:buttonStyle">@style/CustomAlertDialogTheme.Button</item>

        <!-- for System Context Menu -->
        <item name="android:textColor">@android:color/black</item>

        <item name="android:textAppearanceLarge">@style/CustomAlertDialogTheme.TextAppearanceLarge</item>
        <item name="android:textAppearanceMedium">@style/CustomAlertDialogTheme.TextAppearanceMedium</item>
    </style>

    <style name="CustomAlertDialogTheme.Button" parent="@android:style/Widget.Button" />

    <style name="CustomAlertDialogTheme.NoTitle" parent="@style/CustomAlertDialogTheme">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle.NoTitle</item>
    </style>

    <style name="CustomAlertDialogTheme.ButtonBarStyle">
        <item name="android:background">@null</item>
    </style>

    <style name="CustomAlertDialogTheme.TextAppearanceLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="CustomAlertDialogTheme.TextAppearanceMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

</resources>
