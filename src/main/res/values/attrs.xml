<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- AsyncImageView -->
    <declare-styleable name="AsyncImageView">
        <attr name="loadingDrawable" format="reference" />
        <attr name="failedDrawable" format="reference" />
        <attr name="boundWidth" format="dimension" />
        <attr name="boundHeight" format="dimension" />
        <attr name="density">
            <flag name="nochange" value="-1"/>
            <flag name="middle" value="0" />
            <flag name="high" value="1" />
            <flag name="xhigh" value="2" />
        </attr>
        <attr name="progressView" format="reference" />
    </declare-styleable>

    <!-- DateTimePicker -->
    <declare-styleable name="DateTimePicker">
        <attr name="textSize" format="dimension"/>
    </declare-styleable>

    <!-- Unlock Pattern -->
    <declare-styleable name="PatternLockView">
        <!-- Aspect to use when drawing LockPatternView. Choices are "square"(default), "lock_width"
             or "lock_height" -->
        <attr name="aspect" format="string"/>
    </declare-styleable>

    <!-- HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="TransformableEditText">
        <attr name="reserveBackground" format="boolean" />
        <attr name="exploitable" format="boolean" />
    </declare-styleable>

</resources>
